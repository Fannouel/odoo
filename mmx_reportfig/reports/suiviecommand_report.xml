<odoo>
    <data>
        <template id="reportfig_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <h1>Suivi de Command</h1>
                    <p>Num Bon De Commande: <span t-esc="doc.sale_order_id.name"/></p>

                    <!-- Tableau des données -->
                    <table>
                        <tr>
                            <th>Étape de Travail</th>
                            <th>Quantité Totale</th>
                        </tr>
                        <t t-foreach="doc.report_data" t-as="data">
                            <tr>
                                <td><span t-esc="data['workcenter_id'][1]"/></td>
                                <td><span t-esc="data['total_quantity']"/></td>
                            </tr>
                        </t>
                    </table>
                </t>
            </t>
        </template>
    </data>
</odoo>
